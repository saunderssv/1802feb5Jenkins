<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>com.ex.container.servlet.Dispatcher</servlet-class>
    <init-param>
      <param-name>ControllerContext</param-name>
      <param-value>context.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/srv/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.ex.container.filter.AuthorizationFilter</filter-class>
  </filter>
  <!--<filter>-->
    <!--<filter-name>RequestLogFilter</filter-name>-->
    <!--<filter-class>com.ex.container.servlet.filters.RequestLogFilter</filter-class>-->
  <!--</filter>-->
  <!--<filter-mapping>-->
    <!--<filter-name>RequestLogFilter</filter-name>-->
    <!--<url-pattern>/*</url-pattern>-->
  <!--</filter-mapping>-->
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/srv/*</url-pattern>
  </filter-mapping>
  <resource-ref>
    <res-ref-name>jdbc/Chinook</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>
